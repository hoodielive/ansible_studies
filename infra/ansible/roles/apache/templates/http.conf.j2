# This file is the main Apache HTTP server configuration file.
# Ansible Managed

ServerRoot "/etc/httpd"

Listen {{ http_port }}

Include conf.modules.d/*.conf

User apache
Group apache

ServerAdmin {{ admin }}@{{ ansible_hostname }}

<Directory />
	AllowOverride none
	Require all denied
</Directory>

DocumentRoot "{{ content_dir }}"

<Directory "{{ apache_content_dir }}">
	AllowOverride None
	# Allow open access.
	Require all granted
</Directory>

<Directory "{{ apache_content_dir }}">
	Options Indexes FollowSymLinks
	AllowOverride None
	Require all granted
</Directory>

